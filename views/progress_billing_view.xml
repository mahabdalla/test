<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="view_construction_progress_billing_tree" model="ir.ui.view">
            <field name="name">construction.progress.billing.tree</field>
            <field name="model">construction.progress.billing</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_construction_progress_billing_form" model="ir.ui.view">
            <field name="name">construction.progress.billing.form</field>
            <field name="model">construction.progress.billing</field>
            <field name="arch" type="xml">
                <form string="Progress Billing">
                    <header>
                        <button name="action_create_invoice" type="object" string="Create Invoice" class="btn-primary" invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="project_id"/>
                                <field name="partner_id"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="amount_untaxed" readonly="1"/>
                                <field name="amount_tax" readonly="1"/>
                                <field name="amount_total" readonly="1"/>
                                <field name="invoice_id" readonly="1" widget="many2one_clickable"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="product_id"/>
                                        <field name="phase"/>
                                        <field name="work_order"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="price_subtotal" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_construction_progress_billing" model="ir.actions.act_window">
            <field name="name">Progress Billing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.progress.billing</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_progress_billing_root" name="Progress Billing"
                  parent="menu_construction_root" action="action_construction_progress_billing" sequence="60"/>
    </data>
</flectra>


