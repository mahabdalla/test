<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <!-- Task Library Tree View -->
        <record id="view_task_library_tree" model="ir.ui.view">
            <field name="name">construction.task.library.tree</field>
            <field name="model">construction.task.library</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="work_type_id"/>
                    <field name="total_cost"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Task Library Form View -->
        <record id="view_task_library_form" model="ir.ui.view">
            <field name="name">construction.task.library.form</field>
            <field name="model">construction.task.library</field>
            <field name="arch" type="xml">
                <form string="Task Library">
                    <header>
                        <button name="action_import_to_phase" type="object" string="Import to Phase" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="work_type_id"/>
                                <field name="work_subtype_id"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="total_material" readonly="1"/>
                                <field name="total_equipment" readonly="1"/>
                                <field name="total_labor" readonly="1"/>
                                <field name="total_overhead" readonly="1"/>
                                <field name="subcontractor_total" readonly="1"/>
                                <field name="total_cost" readonly="1" class="oe_read_only"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Materials">
                                <field name="material_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_id"/>
                                        <field name="unit_price"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Equipment">
                                <field name="equipment_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_id"/>
                                        <field name="unit_price"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Labor">
                                <field name="labor_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="hours"/>
                                        <field name="rate"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Overhead">
                                <field name="overhead_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Subcontractors">
                                <field name="subcontractor_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Task Library Search View -->
        <record id="view_task_library_search" model="ir.ui.view">
            <field name="name">construction.task.library.search</field>
            <field name="model">construction.task.library</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="work_type_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Import Task Library Wizard Form View -->
        <record id="view_import_task_library_wizard_form" model="ir.ui.view">
            <field name="name">construction.import.task.library.wizard.form</field>
            <field name="model">construction.import.task.library.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Task Library to Phase">
                    <sheet>
                        <group>
                            <field name="task_library_id" readonly="1"/>
                            <field name="phase_id" required="1"/>
                        </group>
                        <group>
                            <field name="import_materials"/>
                            <field name="import_equipment"/>
                            <field name="import_labor"/>
                            <field name="import_overhead"/>
                            <field name="import_subcontractor"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_import" string="Import" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Task Library Action -->
        <record id="action_task_library" model="ir.actions.act_window">
            <field name="name">Task Library</field>
            <field name="res_model">construction.task.library</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('active', '=', True)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Task Library
                </p>
                <p>
                    Task Library contains predefined materials, equipment, labor, overhead, and subcontractor costs
                    that can be imported into WBS phases automatically.
                </p>
            </field>
        </record>
    </data>
</flectra>

