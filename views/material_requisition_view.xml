<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="view_material_requisition_tree" model="ir.ui.view">
            <field name="name">construction.material.requisition.tree</field>
            <field name="model">construction.material.requisition</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="warehouse_id"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_material_requisition_form" model="ir.ui.view">
            <field name="name">construction.material.requisition.form</field>
            <field name="model">construction.material.requisition</field>
            <field name="arch" type="xml">
                <form string="Material Requisition">
                    <header>
                        <button name="action_fetch_from_wbs" type="object" string="Fetch from WBS" class="oe_link" invisible="state != 'draft'"/>
                        <button name="action_department_approve" type="object" string="Department Approve" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_create_purchase_order" type="object" string="Create PO" invisible="state != 'department_approved'"/>
                        <button name="action_create_internal_transfer" type="object" string="Create Transfer" invisible="state != 'department_approved'"/>
                        <button name="action_create_back_order" type="object" string="Create Back Order" invisible="state not in ['department_approved', 'po_created']"/>
                        <button name="action_complete" type="object" string="Complete" class="btn-success" invisible="state not in ['po_created', 'transferred']"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="project_id"/>
                                <field name="phase_id"/>
                                <field name="work_order_id"/>
                                <field name="warehouse_id"/>
                                <field name="date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="approved" widget="boolean_toggle"/>
                                        <field name="approved_by" readonly="1" column_invisible="1"/>
                                        <field name="approval_date" readonly="1" column_invisible="1"/>
                                        <field name="available_qty" readonly="1"/>
                                        <field name="transferred_qty" readonly="1"/>
                                        <field name="fulfilled_qty" readonly="1"/>
                                        <field name="remaining_qty" readonly="1"/>
                                        <field name="operation_type"/>
                                        <field name="purchase_line_id" readonly="1"/>
                                        <field name="transferred" readonly="1"/>
                                        <button name="action_approve_line" type="object" string="Approve" icon="fa-check" invisible="approved"/>
                                        <button name="action_unapprove_line" type="object" string="Unapprove" icon="fa-times" invisible="not approved"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_material_requisition" model="ir.actions.act_window">
            <field name="name">Material Requisition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.material.requisition</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</flectra>

