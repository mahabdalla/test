<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="view_boq_tree" model="ir.ui.view">
            <field name="name">construction.boq.tree</field>
            <field name="model">construction.boq</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="total_budget"/>
                    <field name="state" widget="badge" decoration-success="state=='approved'"
                           decoration-danger="state=='cancel'"/>
                </tree>
            </field>
        </record>

        <record id="view_boq_form" model="ir.ui.view">
            <field name="name">construction.boq.form</field>
            <field name="model">construction.boq</field>
            <field name="arch" type="xml">
                <form string="BOQ">
                    <header>
                        <button name="action_approve" type="object" string="Approve" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="project_id"/>
                            </group>
                            <group>
                                <field name="total_material" readonly="1"/>
                                <field name="total_equipment" readonly="1"/>
                                <field name="total_labor" readonly="1"/>
                                <field name="total_overhead" readonly="1"/>
                                <field name="total_budget" readonly="1" class="oe_read_only"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="BOQ Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="work_type_id"/>
                                        <field name="work_subtype_id"/>
                                        <field name="description"/>
                                        <field name="quantity"/>
                                        <field name="unit_id"/>
                                        <field name="material_total" readonly="1"/>
                                        <field name="equipment_total" readonly="1"/>
                                        <field name="labor_total" readonly="1"/>
                                        <field name="overhead_total" readonly="1"/>
                                        <field name="total" readonly="1"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="work_type_id"/>
                                                    <field name="work_subtype_id"/>
                                                    <field name="description"/>
                                                    <field name="quantity"/>
                                                    <field name="unit_id"/>
                                                </group>
                                                <group>
                                                    <field name="material_total" readonly="1"/>
                                                    <field name="equipment_total" readonly="1"/>
                                                    <field name="labor_total" readonly="1"/>
                                                    <field name="overhead_total" readonly="1"/>
                                                    <field name="total" readonly="1"/>
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Materials">
                                                    <field name="material_line_ids">
                                                        <tree editable="bottom">
                                                            <field name="product_id"/>
                                                            <field name="quantity"/>
                                                            <field name="unit_price"/>
                                                            <field name="total" readonly="1"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                                <page string="Equipment">
                                                    <field name="equipment_line_ids">
                                                        <tree editable="bottom">
                                                            <field name="product_id"/>
                                                            <field name="quantity"/>
                                                            <field name="unit_price"/>
                                                            <field name="total" readonly="1"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                                <page string="Labor">
                                                    <field name="labor_line_ids">
                                                        <tree editable="bottom">
                                                            <field name="name"/>
                                                            <field name="hours"/>
                                                            <field name="rate"/>
                                                            <field name="total" readonly="1"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                                <page string="Overhead">
                                                    <field name="overhead_line_ids">
                                                        <tree editable="bottom">
                                                            <field name="name"/>
                                                            <field name="amount"/>
                                                            <field name="total" readonly="1"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_boq" model="ir.actions.act_window">
            <field name="name">BOQ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.boq</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</flectra>

