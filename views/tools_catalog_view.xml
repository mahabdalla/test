<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="view_tools_catalog_tree" model="ir.ui.view">
            <field name="name">construction.tools.catalog.tree</field>
            <field name="model">construction.tools.catalog</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_id"/>
                    <field name="vendor_id"/>
                    <field name="unit_price"/>
                </tree>
            </field>
        </record>

        <record id="view_tools_catalog_form" model="ir.ui.view">
            <field name="name">construction.tools.catalog.form</field>
            <field name="model">construction.tools.catalog</field>
            <field name="arch" type="xml">
                <form string="Tools Catalog">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="category_id"/>
                                <field name="vendor_id"/>
                            </group>
                            <group>
                                <field name="unit_price"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="image" widget="image"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tools_category_tree" model="ir.ui.view">
            <field name="name">construction.tools.category.tree</field>
            <field name="model">construction.tools.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_tools_category_form" model="ir.ui.view">
            <field name="name">construction.tools.category.form</field>
            <field name="model">construction.tools.category</field>
            <field name="arch" type="xml">
                <form string="Tools Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Tools">
                                <field name="tool_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="unit_price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_tools_catalog" model="ir.actions.act_window">
            <field name="name">Tools Catalog</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.tools.catalog</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_tools_category" model="ir.actions.act_window">
            <field name="name">Tools Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.tools.category</field>
            <field name="view_mode">tree,form</field>
        </record>

