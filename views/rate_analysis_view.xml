<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="view_rate_analysis_tree" model="ir.ui.view">
            <field name="name">construction.rate.analysis.tree</field>
            <field name="model">construction.rate.analysis</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="work_type_id"/>
                    <field name="work_subtype_id"/>
                    <field name="unit_id"/>
                    <field name="total_rate"/>
                </tree>
            </field>
        </record>

        <record id="view_rate_analysis_form" model="ir.ui.view">
            <field name="name">construction.rate.analysis.form</field>
            <field name="model">construction.rate.analysis</field>
            <field name="arch" type="xml">
                <form string="Rate Analysis">
                    <sheet>
                        <group>
                            <group>
                                <field name="work_type_id"/>
                                <field name="work_subtype_id"/>
                                <field name="unit_id"/>
                            </group>
                            <group>
                                <field name="material_cost" readonly="1"/>
                                <field name="equipment_cost" readonly="1"/>
                                <field name="labor_cost" readonly="1"/>
                                <field name="overhead_cost" readonly="1"/>
                                <field name="total_rate" readonly="1" class="oe_read_only"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Materials">
                                <field name="material_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Equipment">
                                <field name="equipment_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Labor">
                                <field name="labor_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="hours"/>
                                        <field name="rate"/>
                                        <field name="total" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Overhead">
                                <field name="overhead_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="total" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_rate_analysis" model="ir.actions.act_window">
            <field name="name">Rate Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.rate.analysis</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</flectra>

