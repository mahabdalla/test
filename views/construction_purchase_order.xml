<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="construction_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">construction.purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_add_approved_requisitions" type="object" string="Add Approved Requisitions" 
                            class="oe_link" invisible="not material_requisition_id or state != 'draft'"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="construction_id" readonly="1" force_save="1"
                           invisible="not construction_id"/>
                    <field name="equipment_id" invisible="not equipment_id"/>
                    <field name="material_id" invisible="not material_id"/>
                    <field name="material_requisition_id" invisible="not material_requisition_id"/>
                    <field name="order_type" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="construction_bill_form_inherit" model="ir.ui.view">
            <field name="name">construction.bill.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="construction_id" readonly="1" force_save="1"
                           invisible="not construction_id"/>
                </xpath>
                <xpath expr="//label[@for='journal_id']" position="before">
                    <field name="order_type" readonly="1" invisible="not order_type"/>
                </xpath>
            </field>
        </record>
    </data>
</flectra>
