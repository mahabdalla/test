<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="view_project_phase_tree" model="ir.ui.view">
            <field name="name">construction.project.phase.tree</field>
            <field name="model">construction.project.phase</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="work_type_id"/>
                    <field name="total_cost"/>
                    <field name="work_order_count"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_project_phase_form" model="ir.ui.view">
            <field name="name">construction.project.phase.form</field>
            <field name="model">construction.project.phase</field>
            <field name="arch" type="xml">
                <form string="Project Phase">
                    <header>
                        <button name="action_view_work_orders" type="object" string="Work Orders" class="oe_stat_button" icon="fa-tasks">
                            <field name="work_order_count" widget="statinfo"/>
                        </button>
                        <button name="action_import_from_task_library" type="object" string="Import from Task Library" class="oe_link" invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="project_id"/>
                                <field name="sequence"/>
                                <field name="work_type_id"/>
                                <field name="work_subtype_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="total_material" readonly="1"/>
                                <field name="total_equipment" readonly="1"/>
                                <field name="total_labor" readonly="1"/>
                                <field name="total_overhead" readonly="1"/>
                                <field name="total_cost" readonly="1" class="oe_read_only"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" nolabel="1"/>
                            </page>
                            <page string="Material Entries">
                                <field name="material_entry_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="boq_quantity" readonly="1"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Equipment Entries">
                                <field name="equipment_entry_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="boq_quantity" readonly="1"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Labor Entries">
                                <field name="labor_entry_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="boq_hours" readonly="1"/>
                                        <field name="hours"/>
                                        <field name="rate"/>
                                        <field name="total" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Overhead Entries">
                                <field name="overhead_entry_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="total" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_work_order_tree" model="ir.ui.view">
            <field name="name">construction.work.order.tree</field>
            <field name="model">construction.work.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="phase_id"/>
                    <field name="project_id"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_work_order_form" model="ir.ui.view">
            <field name="name">construction.work.order.form</field>
            <field name="model">construction.work.order</field>
            <field name="arch" type="xml">
                <form string="Work Order">
                    <header>
                        <button name="action_create_task" type="object" string="Create Task" invisible="state not in ['draft', 'approved']"/>
                        <button name="action_approve" type="object" string="Approve" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_start" type="object" string="Start" class="btn-success" invisible="state != 'approved'"/>
                        <button name="action_complete" type="object" string="Complete" invisible="state != 'in_progress'"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state not in ['draft', 'approved', 'in_progress']"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="phase_id"/>
                                <field name="project_id" readonly="1"/>
                                <field name="work_type_id" readonly="1"/>
                                <field name="work_subtype_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="task_id" readonly="1"/>
                                <field name="material_quantity" readonly="1"/>
                                <field name="equipment_quantity" readonly="1"/>
                                <field name="labor_hours" readonly="1"/>
                                <field name="overhead_amount" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_project_phase" model="ir.actions.act_window">
            <field name="name">Project Phases</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.project.phase</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_work_order" model="ir.actions.act_window">
            <field name="name">Work Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.work.order</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</flectra>

