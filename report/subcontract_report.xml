                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
        <record id="action_report_subcontract" model="ir.actions.report">
            <field name="name">Subcontract Report</field>
            <field name="model">construction.subcontract</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">construction_management.subcontract_report</field>
            <field name="report_file">construction_management.subcontract_report</field>
            <field name="print_report_name">'Subcontract - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_construction_subcontract"/>
            <field name="binding_type">report</field>
        </record>

        <record id="action_report_ra_billing" model="ir.actions.report">
            <field name="name">RA Billing Report</field>
            <field name="model">construction.ra.billing</field>
