<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <template id="work_order_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <style>
                                .info-table {
                                    width: 100%;
                                    border-collapse: collapse;
                                    margin-top: 20px;
                                }
                                .info-table td {
                                    padding: 8px;
                                    border: 1px solid #ddd;
                                }
                                .info-label {
                                    font-weight: bold;
                                    width: 30%;
                                    background-color: #f2f2f2;
                                }
                            </style>
                            <div class="oe_structure"/>
                            <div class="row">
                                <div class="col-12">
                                    <h2>Work Order Report</h2>
                                    <table class="info-table">
                                        <tr>
                                            <td class="info-label">Work Order Reference:</td>
                                            <td><span t-field="o.name"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Phase:</td>
                                            <td><span t-field="o.phase_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Sub Project:</td>
                                            <td><span t-field="o.project_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Work Type:</td>
                                            <td><span t-field="o.work_type_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Work Subtype:</td>
                                            <td><span t-field="o.work_subtype_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Start Date:</td>
                                            <td><span t-field="o.start_date"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">End Date:</td>
                                            <td><span t-field="o.end_date"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Status:</td>
                                            <td><span t-field="o.state"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Material Quantity:</td>
                                            <td><span t-field="o.material_quantity"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Equipment Quantity:</td>
                                            <td><span t-field="o.equipment_quantity"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Labor Hours:</td>
                                            <td><span t-field="o.labor_hours"/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Overhead Amount:</td>
                                            <td><span t-field="o.overhead_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                        </tr>
                                        <tr>
                                            <td class="info-label">Task:</td>
                                            <td><span t-field="o.task_id.name"/></td>
                                        </tr>
                                    </table>
                                    <div t-if="o.description" style="margin-top: 20px;">
                                        <h3>Description:</h3>
                                        <p t-field="o.description" t-options="{'widget': 'text'}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
        <record id="action_report_work_order" model="ir.actions.report">
            <field name="name">Work Order Report</field>
            <field name="model">construction.work.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">construction_management.work_order_report</field>
            <field name="report_file">construction_management.work_order_report</field>
            <field name="print_report_name">'Work Order - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_construction_work_order"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</flectra>

